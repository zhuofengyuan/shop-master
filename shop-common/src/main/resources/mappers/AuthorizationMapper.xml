<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuofengyuan.wechat.shop.mapper.AuthorizationMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.zhuofengyuan.wechat.shop.entity.Authorization">
            <result column="id" property="id" />
            <result column="code" property="code" />
            <result column="name" property="name" />
            <result column="status" property="status" />
            <result column="level" property="level" />
            <result column="sort_order" property="sortOrder" />
            <result column="path" property="path" />
            <result column="is_leaf" property="isLeaf" />
            <result column="parent" property="parent" />
            <result column="description" property="description" />
            <result column="url" property="url" />
            <result column="icon" property="icon" />
            <result column="parentName" property="parentName" />
        </resultMap>

        <!-- 通用数据映射结果 -->
        <resultMap id="BaseTreeResultMap" type="com.zhuofengyuan.wechat.shop.entity.Authorization">
            <result column="id" property="id" />
            <result column="code" property="code" />
            <result column="name" property="name" />
            <result column="status" property="status" />
            <result column="level" property="level" />
            <result column="sort_order" property="sortOrder" />
            <result column="path" property="path" />
            <result column="is_leaf" property="isLeaf" />
            <result column="parent" property="parent" />
            <result column="description" property="description" />
            <result column="url" property="url" />
            <result column="icon" property="icon" />
            <result column="parentName" property="parentName" />
            <collection property="children" select="selectTreeByParent" column="id" />
        </resultMap>
    
        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            a.id, a.code, a.name, a.status, a.level, a.sort_order, a.path, a.is_leaf, a.parent, a.description, a.url, a.icon, a.description
        </sql>

        <sql id="Base_OrderBy">
            ORDER BY a.sort_order ASC
        </sql>

        <select id="findByRoleId" resultMap="BaseResultMap">
            SELECT
            <include refid="Base_Column_List"/>
            FROM authorization a
            WHERE EXISTS(SELECT 1 FROM role_authorization r WHERE r.authorization_id = a.id and r.role_id = #{roleId})
            <include refid="Base_OrderBy" />
        </select>

        <select id="selectAllTree" resultMap="BaseTreeResultMap">
            SELECT
            <include refid="Base_Column_List"/>,
            '' parentName
            FROM authorization a
            WHERE a.parent is null
            <include refid="Base_OrderBy" />
        </select>

        <select id="selectByUserId" parameterType="long" resultMap="BaseResultMap">
            SELECT DISTINCT
                <include refid="Base_Column_List"/>
            FROM authorization a
            INNER JOIN role_authorization ra ON ra.authorization_id = a.id
            WHERE EXISTS (
            SELECT 1 FROM user_role u WHERE u.user_id = #{userId, jdbcType=VARCHAR} AND u.role_id = ra.role_id
            )
            <include refid="Base_OrderBy" />
        </select>

        <select id="selectTree" resultMap="BaseResultMap">
            SELECT
            <include refid="Base_Column_List"/>,
            '' parentName
            FROM authorization a
            WHERE a.parent is null
            <include refid="Base_OrderBy" />
        </select>

        <select id="selectTreeByParent" resultMap="BaseResultMap">
            SELECT
            <include refid="Base_Column_List"/>,
            e.name parentName
            FROM authorization a
            LEFT JOIN authorization e on e.id = a.parent
            WHERE a.parent = #{parent}
            <include refid="Base_OrderBy" />
        </select>
</mapper>