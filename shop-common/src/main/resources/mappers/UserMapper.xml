<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuofengyuan.wechat.shop.mapper.UserMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.zhuofengyuan.wechat.shop.entity.User">
                <result column="id" property="id" />
                    <result column="openid" property="openid" />
                    <result column="name" property="name" />
                    <result column="logo" property="logo" />
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                a.id,
            a.openid, a.name, a.logo
        </sql>

        <select id="findByRoleId" resultMap="BaseResultMap">
            SELECT
            <include refid="Base_Column_List" />
            FROM user a
            WHERE EXISTS ( SELECT 1 FROM user_role r WHERE r.user_id = a.id AND role_id = #{roleId})
        </select>
</mapper>